<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" monitorInterval="30">

	<Properties>
		<Property name="log-path">${jboss.server.log.dir}/PillarLog"</Property>
		<Property name="log-path">C:/jboss-as-7.1.1.Final/standalone/log/</Property>
	</Properties>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		
	  <!--  <RollingFile name="RollingFile" fileName="${log-path}/PillarLog.log"-->
	  <File name="RollingFile" fileName="${log-path}/PillarLog.log"
			filePattern="${log-path}/PillarLog-%d{yyyy-MM-dd}-%i.log" >
			<PatternLayout>
				<pattern>%d{dd/MMM/yyyy HH:mm:ss,SSS}- %c{1}: %m%n</pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="1 KB" />
			</Policies>
			<DefaultRolloverStrategy max="2"/>
	 </File>
	 <!-- </RollingFile> -->
   </Appenders>
	
	<Loggers>
		<Root level="DEBUG">
			<AppenderRef ref="Console" />
			<AppenderRef ref="RollingFile"/>
		</Root>
	</Loggers>
</Configuration>